<Window x:Class="Titalyver2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Titalyver2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStyle="None" AllowsTransparency="True" Background="#7F000000"
        ResizeMode="CanResizeWithGrip">
    <Canvas x:Name="Screen" ClipToBounds="True">
        <StackPanel x:Name="LineList" Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Canvas.Left="0" Canvas.Top="0">
            <local:KaraokeLine x:Name="TestLine" TestText="｜親《おや》｜文字《もじ》" Time="7" FontSize="30" StrokeThickness="2"/>

        </StackPanel>
        <Button x:Name="CloseButton" Content="×" Canvas.Right="0" Canvas.Top="0" Width="32" Height="32" FontSize="20" FontFamily="MS UI Gothic" FontWeight="Bold" FontStyle="Normal" Background="{x:Null}" Click="CloseButton_Click"/>
    </Canvas>
</Window>
